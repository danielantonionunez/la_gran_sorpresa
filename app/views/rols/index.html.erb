<table class="grid">
  <tr Class="gridheader">
    <th>Nombre</th>
    <th colspan=3></th>
  </tr>
<% x=0; @rols.each do |rol| ; c = ((x+=1)%2)==0 ? :gridrow : :gridalternatingrow %>
  <tr class=<%=c%>>
    <td><%= rol.nombre %></td>
    <td><%= link_to :Detalles, rol, :class => :menuLink1N %></td>
    <td><%= link_to :Editar, edit_rol_path(rol), :class => :menuLink1N %></td>
    <td><%= link_to :Eliminar, rol, confirm: "\u00bfEsta seguro?", method: :delete, :class => :menuLink1N %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'Crear nuevo rol', new_rol_path, :class => :menuLink1N %>
