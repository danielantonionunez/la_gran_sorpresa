<table class="grid">
  <tr Class="gridheader">
    <th>Nombre</th>
    <th colspan=3></th>
  </tr>
<% x=0; @tipo_de_forma_de_pagos.each do |tipo_de_forma_de_pago| ; c = ((x+=1)%2)==0 ? :gridrow : :gridalternatingrow %>
  <tr class=<%=c%>>
    <td><%= tipo_de_forma_de_pago.nombre %></td>
    <td><%= link_to :Detalles, tipo_de_forma_de_pago, :class => :menuLink1N %></td>
    <td><%= link_to :Editar, edit_tipo_de_forma_de_pago_path(tipo_de_forma_de_pago), :class => :menuLink1N %></td>
    <td><%= link_to :Eliminar, tipo_de_forma_de_pago, confirm: "\u00bfEsta seguro?", method: :delete, :class => :menuLink1N %></td>
  </tr>
<% end %>
</table>
