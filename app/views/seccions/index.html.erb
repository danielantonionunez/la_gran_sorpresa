<table class="grid">
  <tr Class="gridheader">
    <th>Nombre</th>
    <th>Empresa</th>
    <th colspan=3></th>
  </tr>
<% x=0; @seccions.each do |seccion| ; c = ((x+=1)%2)==0 ? :gridrow : :gridalternatingrow %>
  <tr class=<%=c%>>
    <td><%= seccion.nombre %></td>
    <td><%= seccion.empresa.nombre %></td>
    <td><%= link_to :Detalles, seccion, :class => :menuLink1N %></td>
    <td><%= link_to :Editar, edit_seccion_path(seccion), :class => :menuLink1N %></td>
    <td><%= link_to :Eliminar, seccion, confirm: "\u00bfEsta seguro?", method: :delete, :class => :menuLink1N %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to "Crear nueva secci\u00f3n", new_seccion_path, :class => :menuLink1N %>