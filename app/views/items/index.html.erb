<table class="grid">
  <tr Class="gridheader">
    <th>Nombre</th>
    <th>Formas de pago al contado</th>
    <th>Formas de pago al credito</th>
    <th colspan=3></th>
  </tr>
<% x=0; @items.each do |item| ; c = ((x+=1)%2)==0 ? :gridrow : :gridalternatingrow %>
  <tr class=<%=c%>>
    <td><%= item.nombre %></td>
    <td><%= t item.forma_de_pago_al_contados.any?.to_s %></td>
    <td><%= t item.forma_de_pago_al_creditos.any?.to_s %></td>
    <td><%= link_to :Detalles, item, :class => :menuLink1N %></td>
    <td><%= link_to :Editar, edit_item_path(item), :class => :menuLink1N %></td>
    <td><%= link_to :Eliminar, item, confirm: "\u00bfEsta seguro?", method: :delete, :class => :menuLink1N %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'Crear nuevo item', new_item_path, :class => :menuLink1N %>