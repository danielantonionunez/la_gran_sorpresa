<table class="grid">
  <tr Class="gridheader">
    <th>Nombre</th>
    <th colspan=3></th>
  </tr>
<% x=0; @empresas.each do |empresa| ; c = ((x+=1)%2)==0 ? :gridrow : :gridalternatingrow %>
  <tr class=<%=c%>>
    <td><%= empresa.nombre %></td>
    <td><%= link_to :Detalles, empresa, :class => :menuLink1N %></td>
    <td><%= link_to :Editar, edit_empresa_path(empresa), :class => :menuLink1N %></td>
    <td><%= link_to :Eliminar, empresa, confirm: "\u00bfEsta seguro?", method: :delete, :class => :menuLink1N %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'Crear nueva empresa', new_empresa_path, :class => :menuLink1N %>