<table class="grid">
  <tr Class="gridheader">
    <th>Nombre</th>
    <th>Controlador</th>
    <th>Seccion</th>
    <th>Roles</th>
    <th>Empresa</th>
    <th colspan=3></th>
  </tr>
<% x=0; @elementos.each do |elemento| ; c = ((x+=1)%2)==0 ? :gridrow : :gridalternatingrow %>
  <tr class=<%=c%>>
    <td><%= elemento.nombre %></td>
    <td><%= elemento.controlador %></td>
    <td><%= elemento.seccion.nombre %></td>
    <td><%= elemento.rols.collect(&:nombre).join", " %></td>
    <td><%= elemento.seccion.empresa.nombre %></td>
    <td><%= link_to :Detalles, elemento, :class => :menuLink1N %></td>
    <td><%= link_to :Editar, edit_elemento_path(elemento), :class => :menuLink1N %></td>
    <td><%= link_to :Eliminar, elemento, confirm: "\u00bfEsta seguro?", method: :delete, :class => :menuLink1N %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'Crear nuevo elemento', new_elemento_path, :class => :menuLink1N %>
