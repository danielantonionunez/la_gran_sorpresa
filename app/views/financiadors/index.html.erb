<table class="grid">
  <tr Class="gridheader">
    <th>Nombre</th>
    <th colspan=3></th>
  </tr>
<% x=0; @financiadors.each do |financiador| ; c = ((x+=1)%2)==0 ? :gridrow : :gridalternatingrow %>
  <tr class=<%=c%>>
    <td><%= financiador.nombre %></td>
    <td><%= link_to :Detalles, financiador, :class => :menuLink1N %></td>
    <td><%= link_to :Editar, edit_financiador_path(financiador), :class => :menuLink1N %></td>
    <td><%= link_to :Eliminar, financiador, confirm: "\u00bfEsta seguro?", method: :delete, :class => :menuLink1N %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'Crear nuevo financiador', new_financiador_path, :class => :menuLink1N %>