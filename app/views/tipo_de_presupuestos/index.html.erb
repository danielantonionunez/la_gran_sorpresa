<table class="grid">
  <tr Class="gridheader">
    <th>Nombre</th>
    <th colspan=3></th>
  </tr>
<% x=0; @tipo_de_presupuestos.each do |tipo_de_presupuesto| ; c = ((x+=1)%2)==0 ? :gridrow : :gridalternatingrow %>
  <tr class=<%=c%>>
    <td><%= tipo_de_presupuesto.nombre %></td>
    <td><%= link_to :Detalles, tipo_de_presupuesto, :class => :menuLink1N %></td>
    <td><%= link_to :Editar, edit_tipo_de_presupuesto_path(tipo_de_presupuesto), :class => :menuLink1N %></td>
    <td><%= link_to :Eliminar, tipo_de_presupuesto, confirm: "\u00bfEsta seguro?", method: :delete, :class => :menuLink1N %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'Crear nuevo tipo de presupuesto', new_tipo_de_presupuesto_path, :class => :menuLink1N %>