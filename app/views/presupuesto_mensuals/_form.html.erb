<%= form_for(@presupuesto_mensual) do |f| %>
  <% if @presupuesto_mensual.errors.any? %>
    <div id="error_explanation">
      <h2>No se puede grabar porque no ha pasado la validacion <%= pluralize(@presupuesto_mensual.errors.count, "dato") %>:</h2>
      <ul>
      <% @presupuesto_mensual.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :tipo_de_presupuesto_id, :class => :menuNormal1N %><br />
    <%= f.collection_select :tipo_de_presupuesto_id,@tipo_de_presupuestos,:id,:nombre, {:include_blank => "Seleccione valor"}, {:class => :NormalSelect} %>
  </div>
  <div class="field">
    <%= f.label :periodo, :class => :menuNormal1N %><br />
    <%= f.date_select :periodo, {:order => [:day, :month, :year], :default => Date.today, :discard_day => true, :start_year => 2012}, {:class => :NormalSelect} %>
  </div>
  <div class="field">
    <%= f.label :moneda_id, :class => :menuNormal1N %><br />
    <%= f.collection_select :moneda_id,@monedas,:id,:nombre, {:include_blank => "Seleccione valor"}, {:class => :NormalSelect} %>
  </div>
  <div class="actions">
    <%= f.submit :class => :NormalBoton %>
  </div>
<% end %>